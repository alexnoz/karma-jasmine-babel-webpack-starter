{
  "plugins": [
    "babel-plugin-add-module-exports",
    "babel-plugin-transform-es2015-modules-umd"
  ],
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "> 1%",
            "last 2 versions"
          ]
        }
      }
    ]
  ],
  "env": {
    "karma": {
      "plugins": [
        [
          "istanbul",
          {
            "include": ["**/src/**/*.js"]
          }
        ]
      ]
    }
  }
}
